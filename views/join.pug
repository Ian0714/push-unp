extends layouts/main

block content
    .form__container
        form(action=routes.join, method="post")
            input(type="text", name="name", placeholder="Nickname", required="true")
            input(type="email", name="email", placeholder="Email Address", required="true")
            input(type="password", name="password", placeholder="Password", required="true")
            input(type="password", name="passwordv", placeholder="Verify Password", required="true")
            input(type="text", name="goal", placeholder="Push-up Goals")
            input(type="submit", value = "Join!")